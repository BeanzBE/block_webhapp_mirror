  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd">

  <table name="btMirrorImage">
    <field name="bID" type="integer">
      <unsigned/>
      <key/>
    </field>
    <field name="fID" type="integer"/>
    <field name="direction" type="integer"/>
    <field name="overlap" type="integer"/>
    <field name="backgroundColor" type="text"/>
    <field name="textColor" type="text"/>
    <field name="title" type="text"/>
    <field name="description" type="text"/>
  </table>

</schema>
